@page
@using Cupcakes.Models
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Junxiao's Cupcakes</h1>
<br />
<p><a asp-page="Create" class="btn btn-secondary">Add New Cupcake</a></p>

<div>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Cupcake cupcake in Model.cupcakes)
            {
                <tr>
                    <td><img src="/uploads/@cupcake.ImageFileName" class="img-fluid" style="width: 300px; height: 300px;" /></td>
                    <td>@cupcake.Name</td>
                    <td>@cupcake.Description</td>
                    <td>$@cupcake.Price</td>
                    <td><a asp-page="Delete" asp-route-id="@cupcake.CupcakeId">Delete</a></td>
                </tr>
            }
    </table>
</div>